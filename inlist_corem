      dlg_core_mass_per_step = 1d-4
      relax_core_years_for_dt = 10000
      core_avg_rho = <<rho>>
      core_avg_eps = 1d-6

    steps_to_take_before_terminate = 25000 
/ ! end of star_job namelist

